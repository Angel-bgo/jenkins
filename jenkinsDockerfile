FROM ubuntu:14.04

RUN apt-get -y update && apt-get -y install wget
RUN apt-get install apt-transport-https ca-certificates && \
  apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D && \
  echo "\n deb https://apt.dockerproject.org/repo ubuntu-trusty main" >> /etc/apt/sources.list && \
  apt-get update && apt-get purge lxc-docker && apt-cache policy docker-engine && \
  apt-get install linux-image-extra-$(uname -r) docker-engine docker 
